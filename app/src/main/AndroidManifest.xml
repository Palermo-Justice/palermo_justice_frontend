<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pj_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PalermoJustice"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PalermoJustice">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activities.CreateGameActivity"
            android:exported="false" />
        <activity android:name=".view.activities.JoinGameActivity"
            android:exported="false" />
        <activity android:name=".view.activities.LobbyActivity"
            android:exported="false" />
        <activity android:name=".view.activities.GameActivity"
            android:exported="false" />
        <activity android:name=".view.activities.RoleActionActivity"
            android:exported="false" />
        <activity android:name=".view.activities.TutorialActivity"
            android:exported="false" />

    </application>

</manifest>